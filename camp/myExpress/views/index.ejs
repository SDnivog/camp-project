<%- include('header'); -%>
<div class="container">
<header class="jumbotron">
  <div class="container">
    <h1>READ INTERVIEW EXPIERENCES</h1>
    <p>These are some hand picked campgrounds from all around the world </p>
    <p>
        <a class="btn btn-primary btn-large" href="/campgrounds/new">click to add new campground</a>
    </p>
 </div> 
</header>

    <div class="row text-center">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div>
                     <img class="img-thumbnail" src="<%= campground.image %>" alt="">
                     <div class="caption">
                         <h4><%=  campground.name %> </h4>
                     </div>
                </div>
                <p>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">click me!!</a>
                </p>
            </div>
        <%});%>
    </div>
</div>
<%- include('footer'); -%>